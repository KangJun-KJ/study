<template>
    <div class='section'>
        <div class='date-picker' on-click="toggleClick">
            <input class='input' value="{{= value =}}" placeholder="选择日期" />
            <i class="time"></i>
             <div s-if="open" s-transition="hook('slide-in-top')" class='date-menu'>
                <s-menu on-init="init"
                >
                </s-menu>
            </div>
        </div>
    </div>
</template>

<script>
    import menu from '@/components/task3_2_menu'
    import {transition} from 'san-transition'
    export default {
        components:{
            "s-menu":menu
        },
        initData () {
            return {
                value:"",
                open:true,
                listenScroll:true
            };
        },
        attached(){
            
        },
        init(){
            const _this=this;
            this.setElPosition();
            window.onscroll=function(){
                if(_this.data.get("listenScroll")){
                    console.log(123)
                    _this.setElPosition();
                }
            }
        },
        uninit(){
             this.data.set("listenScroll",false);
        },
        setElPosition(){
            const el=this.el.getElementsByClassName("date-menu")[0];
            var r=this.el.getBoundingClientRect();
            if(r.top+340<=this.getWinHei()){
                el.style.top="50px";
            }else{
                el.style.top="-350px";
            }
        },
        getWinHei(){
            return window.innerHeight||document.documentElement.clientHeight||document.body.clientHeight;
        },
        toggleClick(){
            this.data.set("open",!this.data.get("open"));
        },
        change(value){
            console.log(333);
        },
        hook: transition
    }
</script>

